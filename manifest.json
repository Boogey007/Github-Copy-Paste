{
	"manifest_version": 2,

	"name": "Github Link",
	"description": "Github Link Copy/Paste - James Camon",
	"version": "1.0",

	"permissions": [
		"storage",
		"tabs",
		"http://*/*",
		"https://*/*",
		"clipboardRead",
		"clipboardWrite"
	],

	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

	"background": {
		"persistent": false,
		"scripts": [ "js/background.js" ]
	},

	"browser_action": {
		"default_title": "Github Link",
		"default_icon": "images/icon48.png"
	}
}